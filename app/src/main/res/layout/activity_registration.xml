<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".RegistrationActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#B1D8E6"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp">

        <RadioGroup
            android:id="@+id/rg_registration_acNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Already Have Bank Account ?"
                android:textSize="20sp"
                android:textStyle="italic" />

            <RadioButton
                android:id="@+id/rb_registration_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Default"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <RadioButton
                android:id="@+id/rb_registration_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="20sp"
                android:textStyle="bold" />


            <RadioButton
                android:id="@+id/rb_registration_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RadioGroup>


    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_regi_formate_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#F1FAC2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">



                    <EditText
                        android:id="@+id/et_name_reg"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/ic_baseline_phone_iphone_24"
                        android:hint="Name"
                        android:inputType="textPersonName" />


                    <EditText
                        android:id="@+id/et_mobile_reg"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/ic_baseline_phone_iphone_24"
                        android:hint="Mobile"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/et_email_reg"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/ic_baseline_login_24"

                        android:hint="Email" />

                    <EditText
                        android:id="@+id/et_dob_reg"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/ic_baseline_login_24"

                        android:hint="Date of Birth" />


                    <EditText
                        android:id="@+id/et_password_reg"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/ic_baseline_security_24"
                        android:hint="Password"
                        android:inputType="numberPassword" />

                    <EditText
                        android:id="@+id/et_confirmPassword_reg"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/ic_baseline_security_24"
                        android:hint="Confirm Password"
                        android:inputType="numberPassword" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp">

                    <Button
                        android:id="@+id/btn_reg_reg"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#2196F3"
                        android:text="Registration"
                        android:textAllCaps="false" />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv_regi_formate_2"
            >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

            <EditText

                android:id="@+id/et_ac_no_reg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_baseline_message_24"
                android:hint="Account Number"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_dob_reg_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_baseline_security_24"
                android:hint="DOB"
                android:inputType="text" />

    <Button
        android:id="@+id/btn_reg_reg_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2196F3"
        android:text="Registration"
        android:textAllCaps="false" />

</LinearLayout>

        </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


    <TextView
        android:id="@+id/tv_goto_loginActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Go to Login Activity"
        android:textColor="#5E3636"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>